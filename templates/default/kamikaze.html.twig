{% extends 'base.html.twig' %}

{% block title %}Kamikaze!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Kamikaze Assets</h1>

    <p>
        The option with {% if strategy is defined %} {{ strategy| trans }} {% else %} more {% endif %} revenue are:
        <br>
        {% for project in projects.leads %}
            {{ project.name }}:
            {{ project.profit }}
            {% if not loop.last %}
            <br>
            +
            <br>
            {% endif %}
        {% endfor %}
    </p>
    <h2>Amount Total: {{ projects.totalAmount }} </h2>
</div>
{% endblock %}
